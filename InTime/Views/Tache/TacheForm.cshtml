@{
    ViewBag.Title = "TacheForm";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
    <li class="active">Tâches</li>
</ol>
<h2>Bonjour, voici les actions que vous pouvez effectuer : </h2>

<ol class="round">
    <li class="one">

        <h5>@Html.ActionLink("Ajouter une tâche", "Index", "AjouterTache", null, new { style = "color:blue;" })</h5>
        <p>
            Organisez votre travail avec un calendrier contenant vos tâches que vous devez effectuer.
        </p>
    </li>

    <li class="two">

        <h5>@Html.ActionLink("Consulter vos tâches", "Taches", "ConsulterTache", null, new { style = "color:blue;" })</h5>
        <p>
            Visualisez les tâches que vous devez faire en sélectionnant la journée de votre choix.
        </p>
    </li>

    <li class="three">
        <h5>@Html.ActionLink("Historique des tâches", "Historique", "Historique", null, new { style = "color:blue;" })</h5>
        <p>
            Consulter l'historique de vos tâches.
        </p>
    </li>

    <li class="four">

        <h5>@Html.ActionLink("Consulter votre calendrier", "Index", "Calendrier", null, new { style = "color:blue;" })</h5>
        <p>
            Consulter votre calendrier pour voir votre agenda.
        </p>
    </li>

    <li class="five">
        <h5>@Html.ActionLink("Gérer votre compte", "Index", "GererCompte", null, new { style = "color:blue;" })</h5>
        <p>
            Accéder aux outils de gestion qui vous permettront de changer votre mot de passe, visualiser vos renseignements personnels
            ou de les modifier.
        </p>
    </li>

</ol>
